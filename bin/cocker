#!/bin/bash
cat <<'EOF'
     ,~.
   ,-'__ `-,
  {,-'  `. }              __
 ,( a )   `-.__         ,'  `.
<=.) (         `-.__,=='      `.
  (   )                      /
   `-'\\   ,                    )
       |  \\        `~.        /
       \\   `._        \\      /
        \\     `._____,'    ,'
         `-.             ,'
            `-._     _,-'
                 ï¿£
EOF

messages=(
  "ğŸ” Bawk bawk! Even a headless chicken could do better than this!"
  "ğŸ“ Cluck cluck! You're about to lay an egg with that command!"
  "ğŸ¤ Peep peep! This is why chickens cross the road â€” to get away from your Docker skills!"
  "ğŸ” Squawk! If I had feathers, they'd be falling off from laughing at this!"
  "ğŸ“ Cock-a-doodle-doo! This command is so bad, it woke the entire farm!"
)

permissionMessages=(
    "ğŸ” Even chickens have more authority than you right now!"
    "ğŸ“ You can't even ruffle Docker's feathers without permission!"
    "ğŸ¤ Looks like you're not even allowed in the coop, let alone the Docker group!"
    "ğŸ” Chickens are laughing â€” they have more access to the farm than you do to Docker!"
    "ğŸ“ Permission denied! Even the rooster won't let you near the henhouse!"
)

echo "${messages[RANDOM % ${#messages[@]}]}"
if [ "$EUID" -ne 0 ] && ! groups "$USER" | grep -q '\bdocker\b'; then
    echo "${permissionMessages[RANDOM % ${#permissionMessages[@]}]}"
    exit 1
fi
docker "$@"